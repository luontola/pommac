
version: slick.zip!/lib/slick.jar!/version >> build=(\d+) >> b%1$d

slick:slick
    jar:     slick.zip!/lib/slick.jar
    sources: slick.zip!/src
    javadoc: slick.zip!/javadoc
    depends: slick.deps:lwjgl
             slick.deps:lwjgl-util-applet  optional
             slick.deps:ibxm
             slick.deps:jnlp
             slick.deps:jogg
             slick.deps:jorbis
             slick.deps:tinylinepp

# Native Libraries

slick:slick-natives-linux
    jar:     slick.zip!/lib/natives-linux.jar
    depends: slick:slick
    
slick:slick-natives-mac
    jar:     slick.zip!/lib/natives-mac.jar
    depends: slick:slick
    
slick:slick-natives-win32
    jar:     slick.zip!/lib/natives-win32.jar
    depends: slick:slick


# Examples

slick:slick-examples
    jar:     slick.zip!/lib/slick-examples.jar
    sources: slick.zip!/tools
    depends: slick:slick-testdata

slick:slick-testdata
    resources: slick.zip!/ | testdata/**


# Dependencies

slick.deps:lwjgl
    jar:     slick.zip!/lib/lwjgl.jar

slick.deps:lwjgl-util-applet
    jar:     slick.zip!/applet/lwjgl_util_applet.jar

slick.deps:ibxm
    jar:     slick.zip!/lib/ibxm.jar

slick.deps:jnlp
    jar:     slick.zip!/lib/jnlp.jar

slick.deps:jogg
    jar:     slick.zip!/lib/jogg-*.jar
    version: slick.zip!/lib/jogg-*.jar | jogg-(.+)\.jar >> %1$s

slick.deps:jorbis
    jar:     slick.zip!/lib/jorbis-*.jar
    version: slick.zip!/lib/jorbis-*.jar | jorbis-(.+)\.jar >> %1$s

slick.deps:tinylinepp
    jar:     slick.zip!/lib/tinylinepp.jar


# Not used

slick.deps:jinput
    jar:     slick.zip!/lib/jinput.jar
